<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elévation amont"/>
    <EditText
        android:id="@+id/elevationAmont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="172.110"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Débit total"/>
    <EditText
        android:id="@+id/debitTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="549"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lancer"
        android:onClick="onClickSimulation"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="6"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Turbine"
            android:paddingRight="5dp"/>


        <CheckBox android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbine 1"
            android:checked="true"/>
        <CheckBox android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbine 2"
            android:checked="true"/>
        <CheckBox android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbine 3"
            android:checked="true"/>
        <CheckBox android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbine 4"
            android:checked="true"/>
        <CheckBox android:id="@+id/checkbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbine 5"
            android:checked="true"
            android:paddingRight="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Débit max"
            android:paddingRight="5dp"/>
        <EditText android:id="@+id/debitTurbine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <EditText android:id="@+id/debitTurbine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <EditText android:id="@+id/debitTurbine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <EditText android:id="@+id/debitTurbine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <EditText android:id="@+id/debitTurbine5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Débit réel"
            android:paddingRight="5dp"/>
        <TextView android:id="@+id/resTurbine1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"/>
        <TextView android:id="@+id/resTurbine2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"/>
        <TextView android:id="@+id/resTurbine3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"/>
        <TextView android:id="@+id/resTurbine4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"/>
        <TextView android:id="@+id/resTurbine5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Hauteur"
            android:paddingRight="5dp"/>

        <TextView android:id="@+id/hauteurTurbine1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/hauteurTurbine2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/hauteurTurbine3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/hauteurTurbine4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/hauteurTurbine5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Puissance"
            android:paddingRight="5dp"/>
        <TextView android:id="@+id/puissanceTurbine1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/puissanceTurbine2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/puissanceTurbine3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/puissanceTurbine4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
        <TextView android:id="@+id/puissanceTurbine5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:maxLength="6"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puissance Totale"/>
        <TextView android:id="@+id/puissanceTotale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir les graphiques"
            android:onClick="graphique"/>
    </GridLayout>
<GridLayout android:id="@+id/fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible">
    <fragment android:name="com.example.eleonore.programmationdynamique.GraphiqueFragment"
        android:id="@+id/viewer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
</GridLayout>

</LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>